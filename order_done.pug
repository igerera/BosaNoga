extends blocks/layout-page

block pageTitle 
    title Оформление заказа

append pageLinks
    link(rel="stylesheet", href="css/style-order.css")

block content
    .wrapper.order-wrapper                   
        .site-path
            ul.site-path__items
                li.site-path__item
                    a(href="#") Главная
                li.site-path__item
                    a(href="#") Корзина
                li.site-path__item
                    a(href="#") Оформление заказа
                li.site-path__item
                    a(href="#") Заказ принят

        section.order-done
            h2.order-done__title.order-process__title Заказ принят, спасибо!
            .order-done__information.order-info
                .order-info__item.order-info__item_summ 
                    h3 Сумма заказа:
                    p 12 050&nbsp
                        i.fa.fa-rub(aria-hidden='true')
                .order-info__item.order-info__item_pay-form 
                    h3 Способ оплаты:
                    p Картой курьеру
                .order-info__item.order-info__item_customer-name 
                    h3 Имя клиента:
                    p Каблучкова Антонина
                .order-info__item.order-info__item_adress
                    h3 Адрес доставки:
                    p г. Сапожок, б-р Кожевенников, д. 58 кв. 14
                .order-info__item.order-info__item_phone
                    h3 Телефон:
                    p 8 908 668 78 78
            p.order-done__notice Данные о заказе отправлены на адрес 
                span notbosaanymore@gmail.com.  
            button.order-done__continue ПРОДОЛЖИТЬ ПОКУПКИ